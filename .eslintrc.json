{
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
		"globals": {
			"$": false,
			"jQuery": false
		},
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
